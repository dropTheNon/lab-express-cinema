<div id="movies-banner" class="d-flex flex-column">
    <div class="p-2 align-items-center">
        <h1>Cinema Ironhack</h1>
    </div>
    <div class="p-2 align-items-center">
        <p>Click on the movie to check the showtimes!</p>
    </div>
    <a href="../">Go back</a>
</div>
<div class="row spaced">
    {{#each movies}}
        <div class="card col-4-md spaced" style="width: 18rem;">
            <img class="card-img-top" src="{{image}}" alt="Movie poster">
            <div class="card-body">
                <strong class="card-title content-center">{{title}}</strong><br/>
                <a class="content-center" href="/movie/{{_id}}">See more</a>
            </div>
        </div>
        <br>
    {{/each}}
</div>